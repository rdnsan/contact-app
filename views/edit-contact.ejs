<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah Data Kontak</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(err => { %>
          <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form action="/contact/update" method="POST">
        <input
          type="hidden"
          name="oldName"
          value="<%= (contact.oldName) ? contact.oldName : contact.nama %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            value="<%= contact.nohp %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah Data Kontak</button>
      </form>
    </div>
  </div>
</div>
